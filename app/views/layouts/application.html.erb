<!DOCTYPE html>
<html>
  <head>
    <title>RoRShopLocal</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'default', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'defaults', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-default">
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav navbar-left">
          <% if user_signed_in? %>
            <li><%= link_to 'Home'%></li>
            <li><%= link_to 'Products'%></li>
            <% else %>
            <li><%= link_to 'Home'%></li>
            <li><%= link_to 'Products'%></li>
        <% end %>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <% if user_signed_in? %>
            <li><%= link_to 'Profile'%></li>
            <li><%= link_to 'Show cart'%></li>
            <li><%= link_to 'Log out', destroy_user_session_path, method: :delete%></li>
            <% else %>
            <li><%= link_to 'Show cart'%></li>
            <li><%= link_to 'Sign in', new_user_session_path%></li>
            <li><%= link_to 'Sign up', new_user_registration_path%></li>
          <% end %>
        </ul>
      </div>
    </nav>

    <div id="content">
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
      <%= yield %>
      </div>
  </body>
</html>